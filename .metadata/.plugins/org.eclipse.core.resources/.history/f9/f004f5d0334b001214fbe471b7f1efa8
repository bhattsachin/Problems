package com.bhatt.arrays;

/**
 * 
 * @author bhatt
 * Reverse a String C-Style
 */
public class Two {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String input = "vascodigama";
		System.out.println("Reverse of : " + input + " is : " + reverseString(input) );

	}
	
	public static String reverseString(String input){
		int len = input.length();
		char[] reverse = new char[len];
		char[] inputarray = input.toCharArray();
		System.out.println("input:" + input);
		System.out.println("intput array:" + inputarray[2]);
		for(int i=0;i<len;i++){
			System.out.println(inputarray[i]);
			reverse[(len-1)-i] = inputarray[i];
			
		}
		
		
		return String.valueOf(reverse);
	}

}
