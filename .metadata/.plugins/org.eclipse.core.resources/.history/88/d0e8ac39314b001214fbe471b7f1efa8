package com.bhatt.arrays;

/**
 * @author bhatt if a string has all unique characters
 */

public class One {

	static int[] hash = new int[256];

	public static void main(String args[]) {

		System.out.println("Unique characters");

		String input = "hanmod";
		System.out.println(input + " has unique characters: " + hasUnique(input));

	}

	public static boolean hasUnique(String input) {
		int ascii = 0;
		boolean unique = true;
		for (char i : input.toCharArray()) {
			ascii = i;
			if (hash[ascii] != 0) {
				// already exists
				unique = false;
				break;
			} else {
				hash[ascii] = hash[ascii] + 1;
			}
		}
		return unique;
	}

}
